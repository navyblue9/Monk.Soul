@model SysSet
@{
    ViewBag.Title = "系统设置";
    Layout = "~/Areas/Backend/Views/Shared/_Form.cshtml";
}

@section crumbs{
    <label class="backend-crumbs-separator">/</label>
    <a href="#" title="系统管理">系统管理</a>
    <label class="backend-crumbs-separator">/</label>
    <a href="#" title="系统设置">系统设置</a>
    <label class="backend-crumbs-separator">/</label>
    <a href="#" title="更新设置">更新设置</a>
}

@section beginForm{@{ Html.BeginForm("Update", "SysSet", FormMethod.Post, new { @class = "monk-form" });}}

<div class="monk-form-item">
    <label for="" class="monk-form-label">系统标志</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        <img src="@Model.Logo" alt="" onerror="this.src = '/Areas/Backend/Assets/Images/baisoft-logo.png'" height="50" />
    </div>
</div>
<div class="monk-form-item">
    <label for="Name" class="monk-form-label">系统名称</label>
    <div class="monk-form-wrap">
        <span class="monk-iconfont border-right icon-monk-input"></span>
        @Html.TextBoxFor(u => u.Name,
        new
        {
            @class = "monk-form-input normal",
            placeholder = "系统名称",
            datatype = "s3-16",
            errormsg = "",
            nullmsg = "请输入系统名称"
        })
        <span class="monk-iconfont icon-monk-required"></span>
        <span class="monk-iconfont border-left icon-monk-dacha monk-clear-input"></span>
    </div>
    <div class="monk-form-tip">写点什么描述一下</div>
</div>
<div class="monk-form-item">
    <label for="" class="monk-form-label">系统版本</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        <text>v</text>@Model.Version
    </div>
</div>
<div class="monk-form-item">
    <label for="" class="monk-form-label">关键字</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        @Model.Keywords
    </div>
</div>
<div class="monk-form-item">
    <label for="" class="monk-form-label">系统描述</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        @Model.Description
    </div>
</div>
<div class="monk-form-item">
    <label for="" class="monk-form-label">技术支持</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        <a href="http://www.baisoft.org" style="text-decoration:none;" target="_blank" title="@Model.Support">@Model.Support</a>
    </div>
</div>
<div class="monk-form-item">
    <label for="" class="monk-form-label">版权所有</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        @Model.CopyRight
    </div>
</div>
<div class="monk-form-item">
    <label for="" class="monk-form-label">官方网址</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        <a href="@Model.Site" style="text-decoration:none;" target="_blank" title="官方网址">@Model.Site</a>
    </div>
</div>
<div class="monk-form-item">
    <label for="" class="monk-form-label">默认页容量</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        @Model.PageSize
    </div>
</div>
<div class="monk-form-item">
    <label for="" class="monk-form-label">图片最大上传大小（M）</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        @Model.ImageMaxSize<text>M</text>
    </div>
</div>
<div class="monk-form-item">
    <label for="" class="monk-form-label">视频最大上传大小（M）</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        @Model.VideoMaxSize<text>M</text>
    </div>
</div>
<div class="monk-form-item">
    <label for="" class="monk-form-label">附件最大上传大小（M）</label>
    <div class="monk-form-wrap monk-form-detail-wrap monk-full">
        @Model.AttachMaxSize<text>M</text>
    </div>
</div>

@section operate{
    <input type="submit" class="monk-input-button turquoise monk-form-submit" value="提交保存">
    <input type="reset" class="monk-input-button amethyst monk-form-reset" value="重置表单">
    <input type="button" class="monk-input-button emerland monk-form-previous" value="返回前页" onclick="history.go(-1);">
}

@section endForm{@{ Html.EndForm();}}