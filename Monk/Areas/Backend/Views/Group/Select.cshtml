@section buttons{
    @Html.Raw(ViewBag.HaviorInfo.SelectButtons)
}

<div class="monk-table">
    <table>
        <thead>
            <tr>
                <th align="center" class="monk-table-status">
                    选择
                </th>
                <th align="left">
                    名称
                </th>
                <th align="center" class="monk-table-status">
                    会员数
